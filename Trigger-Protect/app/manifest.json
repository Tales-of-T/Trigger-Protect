{
  "manifest_version": 2,

  "name": "Trigger Protect",
  "description": "This extension allows for users to choose what they want to see on the web, and when.",
  "version": "1.0",
  
   "background": {
      "scripts": [ "background.js" ]
   },
   "content_scripts": [ {
      "js": [ "facebook_filter.js" ],
      "matches": [ "*://*.facebook.com/*" ],
      "run_at": "document_start"
   } ],
   
  "permissions": [
    "identity"
  ],
  "browser_action": {
    "default_icon": "img/logo_triggerwarning_small.png",
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "918695767242-e3lbmib6gq8btgpg8681lmgnvopqgs6q.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  }
}
